{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "paths": {
      "@share": ["./share"],
      "@share/*": ["./share/*"],
      
      "@microservice": ["./microservice"],
      "@microservice/*": ["./microservice/*"]
    }
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["node_modules", "dist"],
}
