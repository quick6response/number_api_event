{
  "compilerOptions":{
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM", "ESNext"],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@notification/*": ["microservice/notification/*"],
      "@notification/dto/*": ["microservice/notification/dto/*"],
      "@main/*": ["microservice/notification/*"],
      "@constant/*": ["constant/*"],
      "@share/*": ["share/*"],
    }
  },
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as our --compilerOptions flag and our TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}