{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@notification/*": ["src/microservice/notification/*"],
      "@notification/dto/*": ["src/microservice/notification/dto/*"],
      "@main/*": ["src/microservice/notification/*"],
      "@constant/*": ["src/constant/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}